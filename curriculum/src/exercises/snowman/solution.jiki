// Build a Snowman!

set snowman_x to 50
set head_y to 27
set head_size to 5
set body_y to 42
set body_size to 10
set base_y to 72
set base_size to 20

// Sky
rectangle(0, 0, 100, 60, "#87CEEB")

// Snowy ground
rectangle(0, 60, 100, 40, "#F0F0F0")

// Base (bottom, biggest)
circle(snowman_x, base_y, base_size, "white")

// Body (middle)
circle(snowman_x, body_y, body_size, "white")

// Head (top, smallest)
circle(snowman_x, head_y, head_size, "white")
