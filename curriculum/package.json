{
  "name": "@jiki/curriculum",
  "version": "1.0.0",
  "description": "Jiki curriculum exercises and content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm run copy-assets",
    "copy-assets": "find src -name '*.css' -exec sh -c 'mkdir -p dist/$(dirname ${1#src/}) && cp $1 dist/${1#src/}' _ {} \\; && find src -name '*.javascript' -o -name '*.py' -o -name '*.jiki' | while read f; do mkdir -p dist/$(dirname ${f#src/}) && cp $f dist/${f#src/}; done",
    "copy-css": "find src -name '*.css' -exec sh -c 'mkdir -p dist/$(dirname ${1#src/}) && cp $1 dist/${1#src/}' _ {} \\;",
    "dev": "pnpm run copy-css && tsc -p tsconfig.build.json --watch & onchange 'src/**/*.css' -- pnpm run copy-css",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "jiki",
    "curriculum",
    "exercises",
    "learn-to-code"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@jiki/interpreters": "workspace:*",
    "@types/diff": "^8.0.0",
    "diff": "^8.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "onchange": "^7.1.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
