{
  "name": "@jiki/content",
  "version": "1.0.0",
  "description": "Jiki blog posts and articles content library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm run copy-images",
    "copy-images": "mkdir -p dist/images && cp -r images/* dist/images/",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "jiki",
    "content",
    "blog",
    "articles"
  ],
  "author": "Jiki Team",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "marked": "^16.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
