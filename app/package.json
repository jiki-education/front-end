{
  "name": "@jiki/app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all icons:generate content:generate --parallel dev:next content:watch",
    "dev:next": "next dev --port 3061 --turbo",
    "build": "npm run content:generate && next build",
    "start": "next start",
    "preview": "wrangler dev",
    "deploy": "DEPLOY_ID=$(git rev-parse --short HEAD) && npx opennextjs-cloudflare build && wrangler deploy --var DEPLOY_ID:$DEPLOY_ID",
    "content:generate": "node scripts/generate-content.js",
    "content:watch": "onchange '../content/src/**' -- node scripts/generate-content.js",
    "icons:generate": "node scripts/generate-icon-types.js",
    "icons:watch": "pnpm run icons:generate && onchange 'icons/**/*.svg' -- pnpm run icons:generate",
    "test": "pnpm run icons:generate && jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:all": "pnpm test && pnpm test:e2e",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.12.1",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@exercism/codemirror-lang-jikiscript": "^0.0.22",
    "@exercism/highlightjs-jikiscript": "^0.0.2",
    "@floating-ui/dom": "^1.7.4",
    "@floating-ui/react": "^0.27.16",
    "@jiki/curriculum": "workspace:*",
    "@jiki/interpreters": "workspace:*",
    "@lezer/common": "^1.5.0",
    "@lezer/highlight": "^1.2.3",
    "@mux/mux-player-react": "^3.10.2",
    "@opennextjs/cloudflare": "^1.14.9",
    "@react-oauth/google": "^0.13.4",
    "@sentry/nextjs": "^10",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.1",
    "@types/react-modal": "^3.16.3",
    "@uidotdev/usehooks": "^2.4.1",
    "@uiw/codemirror-themes": "^4.25.4",
    "animejs": "4.2.2",
    "codemirror": "^6.0.2",
    "date-fns": "^4.1.0",
    "diff": "^8.0.3",
    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "next": "15.5.9",
    "range-analyzer": "0.1.1-alpha.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hot-toast": "^2.6.0",
    "react-lottie-player": "^2.1.0",
    "react-modal": "^3.16.3",
    "typeit-react": "^2.7.8",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.57.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/animejs": "^3.1.13",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.9",
    "gray-matter": "^4.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "knip": "^5.82.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.8.0",
    "raw-loader": "^4.0.2",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "wrangler": "^4.59.2"
  }
}
