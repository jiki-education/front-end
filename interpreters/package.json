{
  "name": "@jiki/interpreters",
  "version": "1.0.0",
  "description": "JikiScript language implementation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser --external:i18next",
    "dev": "npm-run-all --parallel dev:tsc dev:bundle",
    "dev:tsc": "tsc --watch",
    "dev:bundle": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser --external:i18next --watch=forever",
    "test": "vitest --exclude '**/benchmark*.test.ts'",
    "test:watch": "vitest --watch --exclude '**/benchmark*.test.ts'",
    "test:benchmark": "vitest tests/jikiscript/benchmark.test.ts --run",
    "test:javascript": "vitest --exclude '**/benchmark*.test.ts' tests/javascript tests/cross-validation/javascript",
    "test:python": "vitest --exclude '**/benchmark*.test.ts' tests/python tests/cross-validation/python",
    "test:jikiscript": "vitest --exclude '**/benchmark*.test.ts' tests/jikiscript",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "jikiscript",
    "language",
    "interpreter"
  ],
  "author": "",
  "license": "UNLICENSED",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/didyoumean": "^1.2.3",
    "@types/lodash": "^4.17.23",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "marked": "^17.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "didyoumean": "^1.2.2",
    "i18next": "^25.7.4",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "string-similarity-js": "^2.1.4"
  }
}
