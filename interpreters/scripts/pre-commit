echo "Running pre-commit checks..."

# Run formatter on changed files only
echo "ğŸ’… Formatting changed files..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep "^interpreters/" | grep -E '\.(ts|tsx|js|jsx|json|md|yml)$' | sed 's|^interpreters/||' || true)
if [ -n "$STAGED_FILES" ]; then
    echo "Formatting: $STAGED_FILES"
    pnpm exec prettier --write $STAGED_FILES
    git add $STAGED_FILES
else
    echo "No files to format"
fi

# Run ESLint check (treating warnings as errors)
echo "ğŸ” Running ESLint..."
pnpm run lint --max-warnings=0
if [ $? -ne 0 ]; then
    echo "âŒ ESLint check failed (errors or warnings found). Commit aborted."
    exit 1
fi

# Run type check
echo "ğŸ” Type checking..."
pnpm run typecheck
if [ $? -ne 0 ]; then
    echo "âŒ Type check failed. Commit aborted."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
pnpm test
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Commit aborted."
    exit 1
fi

# Run benchmark tests
echo "âš¡ Running benchmark tests..."
pnpm test:benchmark
if [ $? -ne 0 ]; then
    echo "âŒ Benchmark tests failed. Commit aborted."
    exit 1
fi

echo "âœ… All checks passed!"
